<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.huim.demo.kotlin">

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/github_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- gankio -->
        <activity
            android:name=".gank.activity.GankMain"
            android:theme="@style/AppTheme" />
        <!-- phone -->
        <activity android:name=".phone.activity.PhoneStatusActivity"/>
        <!-- floating launcher -->
        <activity android:name=".flotview.Floatinglauncher"/>
        <activity android:name=".flotview.ConfigActivity"/>
        <service android:name=".flotview.FloatingService"/>
    </application>

</manifest>