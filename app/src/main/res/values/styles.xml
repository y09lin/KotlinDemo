<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <!--tab的最大的宽度-->
        <!--<item name="tabMaxWidth">@dimen/design_tab_max_width</item>-->
        <!--tab指示标的颜色-->
        <item name="tabIndicatorColor">@color/icons</item>
        <!--tab 指示标的高度-->
        <item name="tabIndicatorHeight">2dp</item>
        <!--tab字体的样式-->
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <!--tab 选中时的颜色-->
        <item name="tabSelectedTextColor">@color/icons</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <!--Tab字体的默认的颜色-->
        <item name="android:textColor">@color/hint_color</item>
        <!--Tab字体是否为大写-->
        <item name="textAllCaps">false</item>
    </style>
</resources>
